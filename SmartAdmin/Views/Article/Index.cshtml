@{
    ViewBag.Title = "文章管理";
}
<!-- Page title -->
<div id="pagetitle">
    <div class="wrapper">
        <h1>
            文章管理 &rarr; <span>主页</span></h1>
        <!-- Quick search box -->
        <form action="" method="get">
        <input class="" type="text" id="q" name="q" value="请输入搜索关键字" />
        </form>
    </div>
</div>
<!-- End of Page title -->
<!-- Page content -->
<div id="page">
    <!-- Wrapper -->
    <div class="wrapper">
        <!-- 左边分部小节开始 -->
        <section class="column width6 first">
            <h3>
                功能简介</h3>
            <div class="box box-info">
                管理网站发布的文章。
            </div>
            <!--文章列表开始-->
            <h3>
                文章列表</h3>
            <table class="display stylized" id="example">
                <thead>
                    <tr>
                        <th>
                            文章标题
                        </th>
                        <th>
                            发布时间
                        </th>
                        <th>
                            作者
                        </th>
                        <th>
                            操作
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="gradeX">
                        <td>
                            这是一篇测试文章
                        </td>
                        <td>
                            2012-07-10 14:30
                        </td>
                        <td>
                            管理员
                        </td>
                        <td class="center">
                            编辑|删除
                        </td>
                    </tr>
                    <tr class="gradeX">
                        <td>
                            这是一篇测试文章
                        </td>
                        <td>
                            2012-07-10 14:30
                        </td>
                        <td>
                            管理员
                        </td>
                        <td class="center">
                            编辑|删除
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <th>
                            文章标题
                        </th>
                        <th>
                            发布时间
                        </th>
                        <th>
                            作者
                        </th>
                        <th>
                            操作
                        </th>
                    </tr>
                </tfoot>
            </table>
            <div class="clear">
                &nbsp;
            </div>
            <!--文章列表结束-->
        </section>
        <!-- 左边分部小节结束 -->
        <!-- 右边分部小节开始 -->
        <aside class="column width2">
            <div id="rightmenu">
                <header>
                    <h3>
                        常用操作</h3>
                </header>
                <dl class="first">
                    <dt>
                        <img width="16" height="16" alt="Basic styles" src="@Url.Content("~/Content/img/style.png")">
                    </dt>
                    <dd>
                        <a href="@Url.Content("~/Article/Add")">添加文章</a>
                    </dd>
                    <dd class="last">
                        点击链接添加一篇新文章。
                    </dd>
                </dl>
            </div>
            <div class="content-box">
                <header>
                    <h3>
                        便捷信息</h3>
                </header>
                <section>
                    <q>这里描述一段实用的便捷描述文字信息。 <cite>w3schools.com</cite></q>
                </section>
            </div>
        </aside>
        <!-- 右边分部小节结束 -->
    </div>
    <!-- End of Wrapper -->
</div>
<!-- End of Page content -->
<script type="text/javascript">
    $(function () {
        /* datatable */
        $('#example').dataTable();
    });
</script>